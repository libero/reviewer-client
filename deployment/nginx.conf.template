events {
    worker_connections 2000;
}

http {
  server {
    include /etc/nginx/mime.types;

    listen ${CLIENT_PORT};

    location /graphql {
      proxy_pass ${CLIENT_API_PROXY_URL};
    }

    location /auth/ {
      proxy_pass ${CLIENT_AUTH_PROXY_URL};
    }

    location = /config {
      alias ${PUBLIC_CONFIG_PATH};
    }

    location / {
      root /usr/share/nginx/html;
      try_files $uri /index.html;
    }
  }
}
