ARG image_tag=latest

RUN yarn build

FROM nginx:1-alpine

MAINTAINER eLife Reviewer Product Team <reviewer-product@elifesciences.org>
WORKDIR /app

COPY deployment/nginx.conf.template /etc/nginx/nginx.conf.template
COPY deployment/config-template.js /usr/share/nginx/html
COPY dist/ /usr/share/nginx/html
COPY scripts/build-config.sh /app

EXPOSE 80

HEALTHCHECK --interval=1m --timeout=1s \
	CMD curl -f http://localhost/index.html || exit 1

CMD ["/bin/sh", "/app/build-config.sh"]

