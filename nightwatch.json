{
    "src_folders": ["tests/browser-tests"],
    "webdriver": {
        "start_process": true,
        "server_path": "node_modules/.bin/chromedriver",
        "port": 9515
    },
    "output_folder": "tests/output",
    "test_settings": {
        "default": {
            "desiredCapabilities": {
                "browserName": "chrome"
            },
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": true,
                "path": "tests/output/screenshots"
            }
        }
    }
}